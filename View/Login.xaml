        </Grid.Background>
        <Button Content="Login" HorizontalAlignment="Left" Margin="341,305,0,0" VerticalAlignment="Top" Width="96" Height="34"  Foreground="#FFF5F7F9" Background="#FF020000" Click="Connection"/>
        <Label Content="User" HorizontalAlignment="Left" Margin="365,93,0,0" VerticalAlignment="Top" Width="42" Foreground="#FFF5F7F9"/>
        <Label Content="PassWord" HorizontalAlignment="Left" Margin="354,193,0,0" VerticalAlignment="Top" Width="69" Foreground="#FFF5F7F9"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="307,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="307,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>



    </Grid>
</Window>
